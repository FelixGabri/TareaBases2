    <div id="root"></div>

    <script type="text/babel">
        const { useState } = React;

        function Login() {
            const [credentials, setCredentials] = useState({
                usuario: '',
                contraseÃ±a: ''
            });
            const [loading, setLoading] = useState(false);
            const [error, setError] = useState('');
            const [success, setSuccess] = useState('');

            const handleSubmit = async (e) => {
                e.preventDefault();
                
                if (!credentials.usuario.trim() || !credentials.contraseÃ±a.trim()) {
                    setError('Por favor completa todos los campos');
                    return;
                }

                setLoading(true);
                setError('');
                setSuccess('');

                try {
                    const response = await fetch('http://25.46.106.44:3000/api/login', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(credentials)
                    });

                    const result = await response.json();

                    if (result.success) {
                        setSuccess('âœ… Login exitoso! Redirigiendo...');
                        console.log('âœ… Login exitoso - UserId:', result.userId);
                        
                        localStorage.setItem('userId', result.userId);
                        localStorage.setItem('username', result.username);
                        localStorage.setItem('isLoggedIn', 'true');
                        
                        setTimeout(() => {
                            window.location.href = 'tabla.html';
                        }, 1000);
                    } else {
                        setError(result.message || 'Usuario o contraseÃ±a incorrectos');
                    }
                } catch (error) {
                    console.error('Error en login:', error);
                    setError('Error de conexiÃ³n con el servidor. Verifica que el backend estÃ© ejecutÃ¡ndose.');
                } finally {
                    setLoading(false);
                }
            };

            const handleInputChange = (field, value) => {
                setCredentials(prev => ({
                    ...prev,
                    [field]: value
                }));
                // Limpiar errores cuando el usuario empiece a escribir
                if (error) setError('');
            };

            return React.createElement('div', { className: 'login-container' },
                React.createElement('div', { className: 'login-form' },
                    React.createElement('h2', null, 'Iniciar SesiÃ³n - Sistema Empleados'),
                    
                    React.createElement('form', { onSubmit: handleSubmit },
                        React.createElement('div', { className: 'form-group' },
                            React.createElement('label', null, 'Usuario:'),
                            React.createElement('input', {
                                type: 'text',
                                value: credentials.usuario,
                                onChange: (e) => handleInputChange('usuario', e.target.value),
                                placeholder: 'Ingresa tu usuario',
                                disabled: loading,
                                autoFocus: true
                            })
                        ),
                        
                        React.createElement('div', { className: 'form-group' },
                            React.createElement('label', null, 'ContraseÃ±a:'),
                            React.createElement('input', {
                                type: 'password',
                                value: credentials.contraseÃ±a,
                                onChange: (e) => handleInputChange('contraseÃ±a', e.target.value),
                                placeholder: 'Ingresa tu contraseÃ±a',
                                disabled: loading
                            })
                        ),
                        
                        React.createElement('button', { 
                            type: 'submit', 
                            className: 'btn-primary',
                            disabled: loading
                        }, loading ? 'Iniciando SesiÃ³n...' : 'Iniciar SesiÃ³n')
                    ),

                    // Mensaje de error
                    error && React.createElement('div', { className: 'error-message' }, error),
                    
                    // Mensaje de Ã©xito
                    success && React.createElement('div', { className: 'success-message' }, success),

                    // InformaciÃ³n de debug
                    React.createElement('div', { 
                        style: { 
                            marginTop: '1rem', 
                            padding: '0.5rem', 
                            backgroundColor: '#f8f9fa', 
                            borderRadius: '4px',
                            fontSize: '0.8rem',
                            color: '#666',
                            textAlign: 'center'
                        } 
                    }, 
                        'Backend: http://25.46.106.44:3000'
                    )
                )
            );
        }

        // Renderizar la aplicaciÃ³n
        ReactDOM.render(React.createElement(Login), document.getElementById('root'));
    </script>
</body>
